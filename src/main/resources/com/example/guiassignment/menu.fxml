<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import java.lang.String?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.guiassignment.menuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox spacing="10">
        <Label alignment="CENTER" text="ByteMe Canteen Menu" style="-fx-font-size: 20; -fx-font-weight: bold"/>
        <TableView fx:id="menuTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="itemNameColumn" text="Item Name" prefWidth="200"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="120"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>

